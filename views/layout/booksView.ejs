<!-- The part of the all books -->
<!-- The books is the -->

    <div class="container mt-3">
        <div class="row">
            <div class="col-6">
                <% if (id == 0 ) { %>
                    <h3 class="my-3">There are <%= books.length %> books in total</h3>
                <% } else {%>
                    <h3 class="my-3">There are <%= books.length %> books in <%= books[0].Genre.genreName %> </h3>
                <% } %>
            </div>

            <div class="col-auto ms-auto mt-3">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-<%= id %>IconView-tab" data-bs-toggle="pill" data-bs-target="#pills-<%= id %>IconView" type="button" role="tab" aria-controls="pills-<%= id %>IconView" aria-selected="true"><i class="bi bi-grid-fill"></i></button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-<%= id %>TableView-tab" data-bs-toggle="pill" data-bs-target="#pills-<%= id %>TableView" type="button" role="tab" aria-controls="pills-<%= id %>TableView" aria-selected="false"><i class="bi bi-list"></i></button>
                </li>
                </ul>
            </div>
        </div>
        
        <div class="tab-content mt-3" id="pills-tabContent">
            <!-- The grid view -->
            <div class="tab-pane fade show active px-5" id="pills-<%= id %>IconView" role="tabpanel" aria-labelledby="pills-<%= id %>IconView-tab">
            <%- include('booksGridView', {books, id})%>
            </div>
        
            <!-- The list view  -->
            <div class="tab-pane fade" id="pills-<%= id %>TableView" role="tabpanel" aria-labelledby="pills-<%= id %>TableView-tab">
                <%- include('booksListView', {books})%>
            </div>
        </div>
    </div>


